{
	"name": "cyrus-opencode-runner",
	"version": "0.1.0",
	"description": "OpenCode process spawning and management for Cyrus - enables using OpenCode with Groq/Gemini as Linear Agent backend",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@opencode-ai/sdk": "^0.0.1",
		"cyrus-core": "workspace:*",
		"cyrus-simple-agent-runner": "workspace:*",
		"zod": "^3.23.0"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"typescript": "^5.3.3",
		"vitest": "^1.1.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
